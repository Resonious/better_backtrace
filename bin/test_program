#!/usr/bin/env ruby
# frozen_string_literal: true

require 'pry'
require 'bundler/setup'
require 'better_backtrace'

# Generic Animal class
class Animal
  def reply(_word)
    raise 'WHAT KIND OF ANIMAL IS THIS???'
  end
end

# DOG class
class Dog < Animal
  def reply(word)
    case word
    when 'hello'
      'bark'
    when 'bye'
      'woof'
    else
      a = Animal.new
      a.reply(word)
    end
  end
end

def do_it(message)
  the_dog = Dog.new
  yield message, the_dog
end

def should_not_be_in_trace
  'yeas'
end

class NewGuy
  do_it should_not_be_in_trace do |m, what|
    what.reply m + ' ++++'
  end
end
