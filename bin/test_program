#!/usr/bin/env ruby
# frozen_string_literal: true

require 'pry'
require 'bundler/setup'
require 'better_backtrace'

# Generic Animal class
class Animal
  def reply(_word)
    raise 'WHAT KIND OF ANIMAL IS THIS???'
  end
end

# DOG class
class Dog < Animal
  def reply(word)
    case word
    when 'hello'
      'bark'
    when 'bye'
      'woof'
    else
      a = Animal.new
      a.reply(word)
    end
  end
end

the_dog = Dog.new
the_dog.reply 'heeeeey'
